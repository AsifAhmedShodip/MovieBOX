<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="@color/ash">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="right"
        android:textSize="20dp"
        android:textColor="#7F848A"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="Movie Name"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="right"
        android:textSize="15dp"
        android:layout_below="@+id/name"
        android:textColor="#7F848A"
        android:layout_marginBottom="10dp"
        android:text="2017"
        android:layout_marginRight="20dp"
        android:id="@+id/year"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="5"
        android:id="@+id/linear"
        android:layout_below="@+id/year"
        android:gravity="center"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/imdb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/imdb_logo"
            android:layout_marginRight="0dp"
            android:text=""
            android:gravity="center"
            android:textColor="#7F848A"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />


        <ImageView
            android:id="@+id/rotten"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#7F848A"
            android:src="@drawable/rotten"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/tmdb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#7F848A"
            android:src="@drawable/custom_tmdb"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/meta"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="List"
            android:textColor="#7F848A"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/metacritic"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="5"
        android:id="@+id/linear3"
        android:layout_below="@+id/linear"
        android:gravity="center"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/imdbrating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/imdb_logo"
            android:layout_marginRight="0dp"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#7F848A"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />


        <TextView
            android:id="@+id/rottenrating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#7F848A"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tmdbrating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#7F848A"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/metarating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#7F848A"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="50dp"
    android:layout_weight="5"
    android:id="@+id/linear2"
    android:layout_below="@+id/linear3"
    android:gravity="center"
    android:orientation="horizontal" >


    <TextView
        android:id="@+id/watched"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_eye_white"
        android:layout_marginRight="0dp"
        android:text="Watched"
        android:gravity="center"
        android:textColor="#7F848A"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/wish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Wishlist"
        android:textColor="#7F848A"
        android:drawableTop="@drawable/ic_wish_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="List"
        android:textColor="#7F848A"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/ic_list"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <!--<TextView
        android:id="@+id/imdbrating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/ic_star"
        android:text="   "
        android:textColor="#7F848A"
        android:textSize="20dp" />-->

</LinearLayout>
</RelativeLayout>